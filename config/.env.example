# TED System Environment Configuration Template
# Copy this file to .env and update with your values

# === Backend Configuration ===

# MongoDB Connection
MONGO_URL=mongodb://localhost:27017/rugs_tracker
DB_NAME=rugs_tracker

# Logging
LOG_LEVEL=INFO

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# === ML/Prediction Settings ===

# Base hazard parameters
BASE_HAZARD=0.005
HAZARD_DECAY=0.001

# EPR (Early Peak Regime) Configuration
EPR_RATIO_THRESHOLD=2.8
EPR_HAZARD_SCALE=0.70
EPR_DECAY_TAU=120
EPR_QUANTILE_WIDE_SPREAD=0.70
EPR_SPREAD_WIDE=150
EPR_EARLY_TICK_MAX=120
EPR_MIN_SUSTAIN_TICKS=10
EPR_BASELINE_EMA_ALPHA=0.1

# Dynamic Quantile Adjustment
QUANTILE_ADJUSTMENT_ENABLED=false
QUANTILE_DEAD_ZONE=0.1
QUANTILE_ALPHA=0.3

# Side Bet Configuration
SIDEBET_PWIN_THRESHOLD=0.20
SIDEBET_WINDOW_TICKS=40
SIDEBET_COOLDOWN_TICKS=4

# Tick Feature Engine
STREAM_FEATURES_ENABLED=false
STREAM_INFLUENCE_ENABLED=false
STREAM_RING_SIZE=1200
STREAM_SAMPLE_EVERY_TICKS=1
STREAM_MAX_CPU_MS=3

# Model Parameters
CONFIDENCE_FLOOR=0.3
CONFIDENCE_CEILING=0.95
TOLERANCE_MIN=20
TOLERANCE_MAX=100

# System Settings
PREDICTION_HISTORY_SIZE=200
METRICS_WINDOW_SIZE=50
TICK_DURATION_MS=250
MEDIAN_DURATION=280
ULTRA_SHORT_THRESHOLD=100
MAX_PAYOUT_THRESHOLD=50

# === Frontend Configuration ===

# API Endpoints
REACT_APP_BACKEND_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Feature Flags
REACT_APP_FEATURE_TICK_PANEL=false

# === Docker Configuration ===
# See config/.env.docker for Docker-specific settings

# === Phase 2 Configuration ===
# See config/.env.phase2 for Phase 2 rollout settings